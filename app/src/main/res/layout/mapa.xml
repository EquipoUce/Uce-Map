<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_general_2"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/textTituloMapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/courgette"
        android:text="mensaje\ndfgdfg"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <fragment
        android:id="@+id/idMapaGeneral"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="326dp"
        android:layout_height="399dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottonCamino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloMapa"
        app:layout_constraintVertical_bias="0.285"
        map:cameraZoom="250"
        map:uiCompass="true"
        map:uiMapToolbar="false"
        map:uiRotateGestures="true"
        map:uiZoomControls="true" />

    <Button
        android:id="@+id/bottonCamino"
        android:layout_width="313dp"
        android:layout_height="55dp"
        android:background="@drawable/custom_button_background"
        android:fontFamily="@font/courgette"
        android:text="Generar Camino"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:icon="@drawable/icono_gotita"
        app:iconSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <Button
        android:id="@+id/bottonCamino2"
        android:layout_width="313dp"
        android:layout_height="55dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/custom_button_background"
        android:fontFamily="@font/courgette"
        android:text="Teatro"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:icon="@drawable/icono_gotita"
        app:iconSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottonCamino" />

    <Button
        android:id="@+id/bottonDetalles"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_button_background"
        android:fontFamily="@font/courgette"
        android:text="Detalles"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927" />

    <Button
        android:id="@+id/bottonInformacion"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_button_background"
        android:fontFamily="@font/courgette"
        android:text="InformaciÃ³n"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toEndOf="@+id/bottonDetalles"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927" />


</androidx.constraintlayout.widget.ConstraintLayout>